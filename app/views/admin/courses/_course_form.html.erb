<%= form_for([:admin, @course]) do |f| %>

    <%= f.label(:name) %><br>
    <%= f.text_field(:name, placeholder: 'Name') %><br>

    <%= f.label(:start_date) %><br>
    <%= f.date_select(:start_date) %><br>

    <%= f.label(:end_date) %><br>
    <%= f.date_select(:end_date) %><br>

    <%= f.label(:description) %><br>
    <%= f.text_area(:description, placeholder: 'description', size: '100x5') %><br>


    <%= f.submit('Save Course', class: 'btn btn-success', role: 'button') %><br>

<% end %>
