<div class="row">
  <div class="col-md-4">
    <h1>All Courses</h1>
  </div>
  <div class="col-md-2 col-md-offset-6">
    <%= link_to 'Create Course', new_admin_course_path, class: 'btn btn-success btn-lg', role: 'button' %>
  </div>
</div>

<div>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Course Name</th>
      <th>Action</th>
      <th></th>
      <th></th>
    </tr>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= link_to 'Show', admin_course_path(course.id), class: 'btn btn-info btn-sm', role: 'button' %></td>
      <td><%= link_to 'Edit', edit_admin_course_path(course.id), class: 'btn btn-warning btn-sm', role: 'button' %></td>
      <td><%= link_to 'Delete', admin_course_path(course.id), class: 'btn btn-danger btn-sm', role: 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
</div>
